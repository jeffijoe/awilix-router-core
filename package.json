{
  "name": "awilix-router-core",
  "version": "0.0.0-development",
  "description": "",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": {
      "edge-light": "./lib/index.edge.mjs",
      "workerd": "./lib/index.edge.mjs",
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json && rollup -c",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint --fix 'src/**/*.ts' && prettier --write \"src/**/*.ts\"",
    "cover": "jest --coverage",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffijoe/awilix-router-core.git"
  },
  "files": [
    "lib",
    "LICENSE.md",
    "README.md"
  ],
  "directories": {
    "lib": "lib"
  },
  "keywords": [],
  "author": "Jeff Hansen <jeff@jeffijoe.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeffijoe/awilix-router-core/issues"
  },
  "homepage": "https://github.com/jeffijoe/awilix-router-core#readme",
  "dependencies": {
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@semantic-release/condition-codeship": "^1.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.5",
    "@types/prettier": "^3.0.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "rollup": "^4.55.1",
    "semantic-release": "^25.0.2",
    "semantic-release-conventional-commits": "^3.0.0",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix --project tsconfig.json",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(src/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "src"
    ],
    "modulePaths": [
      "src"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "transform": {
      "\\.(ts|tsx)": ["ts-jest", { "diagnostics": { "ignoreCodes": [151002] } }]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {}
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
